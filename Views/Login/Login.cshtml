@model LdapAuthentication.Models.User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-controller="Login" asp-action="Login" method="post">
    <div class="form-group">
        <label for="Username">Username</label>
        <input type="text" id="Username" name="Username" class="form-control" asp-for="UserName" required>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" class="form-control" asp-for="Password" required>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" id="RememberMe" name="RememberMe" class="form-check-input" asp-for="RememberMe">
            <label class="form-check-label" for="RememberMe">Remember me</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
